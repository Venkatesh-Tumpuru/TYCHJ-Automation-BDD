  "main": "index.js",
  "scripts": {
    "test": "cucumber-js || true",
    "allure:clean": "node -e \"require('fs').rmSync('src/reports/allure-results', { recursive: true, force: true }); require('fs').rmSync('src/reports/allure-report', { recursive: true, force: true }); require('fs').rmSync('src/reports/cucumber-report.json', { force: true });\"",
    "allure:convert": "node src/reporter/cucumberToAllure.js",
    "allure:generate": "allure generate src/reports/allure-results --clean -o src/reports/allure-report",
    "allure:open": "allure open src/reports/allure-report",
    "allure:serve": "allure serve src/reports/allure-results",
    "notify": "ts-node src/utils/sendNotifications.js",
    "test:allure": "npm run allure:clean && npm run test && npm run allure:convert && npm run allure:generate && npm run allure:open"
  },
