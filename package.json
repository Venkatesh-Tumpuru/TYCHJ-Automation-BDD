    "@cucumber/cucumber": "^11.0.1",
    "@cucumber/messages": "^31.0.0",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.34.1",
    "cpx2": "^4.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11",
    "uuid": "^13.0.0"
  }
